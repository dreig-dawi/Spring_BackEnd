package com.example.cheffin.dto;

import java.time.LocalDateTime;

public class ConversationDTO {
    private Long participantId;
    private String username;
    private String lastMessage;
    private LocalDateTime timestamp;

    // Default constructor
    public ConversationDTO() {
    }

    // All-args constructor
    public ConversationDTO(Long participantId, String username, String lastMessage, LocalDateTime timestamp) {
        this.participantId = participantId;
        this.username = username;
        this.lastMessage = lastMessage;
        this.timestamp = timestamp;
    }

    // Static builder method
    public static ConversationDTOBuilder builder() {
        return new ConversationDTOBuilder();
    }

    // Getters and setters
    public Long getParticipantId() {
        return participantId;
    }

    public void setParticipantId(Long participantId) {
        this.participantId = participantId;
    }

    public String getUsername() {
        return username;
    }

    public void setUsername(String username) {
        this.username = username;
    }

    public String getLastMessage() {
        return lastMessage;
    }

    public void setLastMessage(String lastMessage) {
        this.lastMessage = lastMessage;
    }

    public LocalDateTime getTimestamp() {
        return timestamp;
    }

    public void setTimestamp(LocalDateTime timestamp) {
        this.timestamp = timestamp;
    }

    // Builder class
    public static class ConversationDTOBuilder {
        private Long participantId;
        private String username;
        private String lastMessage;
        private LocalDateTime timestamp;

        ConversationDTOBuilder() {
        }

        public ConversationDTOBuilder participantId(Long participantId) {
            this.participantId = participantId;
            return this;
        }

        public ConversationDTOBuilder username(String username) {
            this.username = username;
            return this;
        }

        public ConversationDTOBuilder lastMessage(String lastMessage) {
            this.lastMessage = lastMessage;
            return this;
        }

        public ConversationDTOBuilder timestamp(LocalDateTime timestamp) {
            this.timestamp = timestamp;
            return this;
        }

        public ConversationDTO build() {
            return new ConversationDTO(participantId, username, lastMessage, timestamp);
        }
    }
}
